@model MVCCamiloMentoria.ViewModels.TurmaViewModel

@{
    ViewData["Title"] = "Criar Turma";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Cadastro de Turma</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="NomeTurma" class="form-label"></label>
                            <input asp-for="NomeTurma" class="form-control" />
                            <span asp-validation-for="NomeTurma" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AnoLetivo" class="form-label"></label>
                            <input asp-for="AnoLetivo" class="form-control" />
                            <span asp-validation-for="AnoLetivo" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Turno" class="form-label"></label>
                            <input asp-for="Turno" class="form-control" />
                            <span asp-validation-for="Turno" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="EscolaId" class="form-label">Escola</label>
                            <select asp-for="EscolaId" class="form-select" asp-items="ViewBag.Escolas">
                                <option value="">Selecione uma escola</option>
                            </select>
                            <span asp-validation-for="EscolaId" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
