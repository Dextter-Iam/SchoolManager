@model IEnumerable<MVCCamiloMentoria.ViewModels.TurmaViewModel>

@{
    ViewData["Title"] = "Turmas";
}

<div class="container">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Turmas</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Nome da Turma</th>
                        <th>Ano Letivo</th>
                        <th>Turno</th>
                        <th>Escola</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var turma in Model)
                    {
                        <tr>
                            <td>@turma.NomeTurma</td>
                            <td>@turma.AnoLetivo</td>
                            <td>@turma.Turno</td>
                            <td>@turma.Escola?.Nome</td>
                            <td class="d-flex justify-content-around">
                                <a asp-action="Details" asp-route-id="@turma.TurmaId" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Detalhes
                                </a>
                                <a asp-action="Edit" asp-route-id="@turma.TurmaId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@turma.TurmaId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
