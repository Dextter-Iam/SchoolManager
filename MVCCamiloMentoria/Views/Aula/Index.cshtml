@model IEnumerable<MVCCamiloMentoria.ViewModels.AulaViewModel>

<div class="container">

    <p></p>
    <div class="d-flex justify-content-between mb-4">

        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Criar Nova Aula
        </a>
    </div>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Aulas Cadastradas</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.HorarioInicio)</th>
                        <th>@Html.DisplayNameFor(model => model.HorarioFim)</th>
                        <th>@Html.DisplayNameFor(model => model.Escola)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.HorarioInicio)</td>
                            <td>@Html.DisplayFor(modelItem => item.HorarioFim)</td>
                            <td>@Html.DisplayFor(modelItem => item.Escola.Nome)</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Detalhes
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
