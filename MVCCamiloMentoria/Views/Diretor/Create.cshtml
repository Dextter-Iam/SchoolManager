@model MVCCamiloMentoria.ViewModels.DiretorViewModel

@{
	ViewData["Title"] = "Cadastrar Diretor";
}

<div class="container">
	<div class="justify-content-center">
		<br />
		<h3 class="mb-4">Cadastro de Diretor</h3>
	</div>

	<hr />

	<div class="row">
		<div class="col-md-8 offset-md-2">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

				<div class="card mb-4">
					<div class="card-header bg-primary text-white">
						<h5 class="mb-0">Informações Pessoais</h5>
					</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="Nome" class="form-label"></label>
							<input asp-for="Nome" class="form-control" />
							<span asp-validation-for="Nome" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Matricula" class="form-label"></label>
							<input asp-for="Matricula" class="form-control" />
							<span asp-validation-for="Matricula" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="card mb-4">
					<div class="card-header bg-primary text-white">
						<h5 class="mb-0">Telefones</h5>
					</div>
					<div class="card-body">
						@for (var i = 0; i < Model.Telefones!.Count; i++)
						{
							<div class="row telefone-item mb-3">
								<div class="col-md-4">
									<label class="form-label">DDD</label>
									<input name="Telefones[@i].DDD" class="form-control" value="@Model.Telefones[i].DDD" />
									<span asp-validation-for="Telefones[@i].DDD" class="text-danger"></span>
								</div>
								<div class="col-md-8">
									<label class="form-label">Número</label>
									<input name="Telefones[@i].Numero" class="form-control" value="@Model.Telefones[i].Numero" />
									<span asp-validation-for="Telefones[@i].Numero" class="text-danger"></span>
								</div>
							</div>
						}
					</div>
				</div>
				<div class="card mb-4">
					<div class="card-header bg-primary text-white">
						<h5 class="mb-0">Escola</h5>
					</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="EscolaId" class="form-label"></label>
							<select asp-for="EscolaId" class="form-select" asp-items="ViewBag.Escolas"></select>
							<span asp-validation-for="EscolaId" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Endereço</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="Endereco.NomeRua"></label>
							<input asp-for="Endereco.NomeRua" class="form-control" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="Endereco.NumeroRua"></label>
							<input asp-for="Endereco.NumeroRua" class="form-control" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="Endereco.Complemento"></label>
							<input asp-for="Endereco.Complemento" class="form-control" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="Endereco.CEP"></label>
							<input asp-for="Endereco.CEP" class="form-control" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="Endereco.EstadoId"></label>
							<select asp-for="Endereco.EstadoId" class="form-select" asp-items="ViewBag.Estados"></select>
						</div>
					</div>
				</div>


				<div class="form-group text-end">
					<input type="submit" value="Cadastrar" class="btn btn-primary px-4" />
					<a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
				</div>
			</form>
		</div>
	</div>
</div>
