<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManager</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/plux.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCCamiloMentoria.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div id="sidebarMenu" class="sidebar">
        <ul class="list-unstyled px-3 pt-4">
            <li><a href="/Aluno" class="nav-link"><i class="fas fa-user-graduate me-2 text-primary"></i>Alunos</a></li>
            <li><a href="/Disciplina" class="nav-link"><i class="fas fa-book-open me-2 text-success"></i>Disciplinas</a></li>
            <li><a href="/Fornecedor" class="nav-link"><i class="fas fa-truck me-2 text-warning"></i>Fornecedores</a></li>
            <li><a href="/Escola" class="nav-link"><i class="fas fa-school me-2 text-secondary"></i>Escolas</a></li>
            <li><a href="/Aula" class="nav-link"><i class="fas fa-pencil-alt me-2 text-secondary"></i>Aulas</a></li>
            <li><a href="/Equipamento" class="nav-link"><i class="fas fa-desktop me-2 text-secondary"></i>Equipamentos</a></li>
        </ul>
    </div>
    <header>
        <nav class="navbar navbar-light bg-white shadow-sm px-3 py-2">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary fs-4 d-flex align-items-center" href="#" onclick="toggleSidebar()">
                    <i class="fas fa-graduation-cap me-2" id="menuToggleIcon"></i> School Manager
                </a>
            </div>
        </nav>
    </header>

    <div class="container pb-5">
        <main role="main" class="pb-3">
            @* Exibir mensagens de sucesso ou erro via TempData *@
            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-1"></i> @TempData["MensagemSucesso"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-1"></i> @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center py-3">
            &copy; 2025 - <strong>FISAppAcademy</strong> - <a asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebarMenu");
            const body = document.body;
            const icon = document.getElementById("menuToggleIcon");

            sidebar.classList.toggle("show");
            body.classList.toggle("menu-open");

            // Animação no ícone (pode adicionar mais se quiser)
            if (sidebar.classList.contains("show")) {
                icon.classList.add("text-primary");
            } else {
                icon.classList.remove("text-primary");
            }
        }
    </script>
</body>
</html>
