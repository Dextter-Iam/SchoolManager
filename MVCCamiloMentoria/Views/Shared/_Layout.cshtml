<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCCamiloMentoria</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/plux.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCCamiloMentoria.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-3 py-2">
            <div class="container-fluid">

                <a class="navbar-brand fw-bold text-primary fs-4" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap me-2"></i>School Manager
                </a>

         
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarMain">
                    <ul class="navbar-nav gap-2">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center text-dark" asp-controller="Aluno" asp-action="Index">
                                <i class="fas fa-user-graduate me-2 text-primary"></i> Alunos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center text-dark" asp-controller="Disciplina" asp-action="Index">
                                <i class="fas fa-book-open me-2 text-success"></i> Disciplinas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center text-dark" asp-controller="Fornecedor" asp-action="Index">
                                <i class="fas fa-truck me-2 text-warning"></i> Fornecedores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center text-dark" asp-controller="Escola" asp-action="Index">
                                <i class="fas fa-school me-2 text-secondary"></i> Escolas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center text-dark" asp-controller="Aula" asp-action="Index">
                                <i class="fas fa-pencil-alt me-2 text-secondary"></i> Aulas
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center text-dark" asp-controller="Equipamento" asp-action="Index">
                                <i class="fas fa-desktop me-2 text-secondary"></i> Equipamentos
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container pb-5">
        <main role="main" class="pb-3">
            @* Exibir mensagens de sucesso ou erro via TempData *@
            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-1"></i> @TempData["MensagemSucesso"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-1"></i> @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center py-3">
            &copy; 2025 - <strong>FISAppAcademy</strong> - <a asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
