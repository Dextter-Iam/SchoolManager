@model MVCCamiloMentoria.ViewModels.FornecedorViewModel

<div class="container">
    <h3 class="mb-4">Editar Fornecedor</h3>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CNPJ" class="control-label">CNPJ</label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CPF" class="control-label">CPF</label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FinalidadeFornecedor" class="control-label">Finalidade</label>
                    <input asp-for="FinalidadeFornecedor" class="form-control" />
                    <span asp-validation-for="FinalidadeFornecedor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EscolaId" class="control-label">Escola</label>
                    <select asp-for="EscolaId" class="form-control" asp-items="ViewBag.EscolaId"></select>
                    <span asp-validation-for="EscolaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
