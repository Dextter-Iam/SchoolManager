@model MVCCamiloMentoria.ViewModels.FornecedorViewModel

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Editar Fornecedor</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CNPJ" class="form-label">CNPJ</label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CPF" class="form-label">CPF</label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FinalidadeFornecedor" class="form-label">Finalidade</label>
                    <input asp-for="FinalidadeFornecedor" class="form-control" />
                    <span asp-validation-for="FinalidadeFornecedor" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="EscolaId" class="form-label">Escola</label>
                    <select asp-for="EscolaId" class="form-select" asp-items="ViewBag.EscolaId"></select>
                    <span asp-validation-for="EscolaId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-lg"></i> Salvar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Voltar para a Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
