@model MVCCamiloMentoria.ViewModels.FornecedorViewModel

<div class="container">
    <h3 class="mb-4">Tem certeza que deseja excluir este fornecedor?</h3>
    <div>
        <h4>Fornecedor</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CNPJ)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CNPJ)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CPF)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CPF)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FinalidadeFornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FinalidadeFornecedor)
            </dd>
        </dl>
    </div>

    <div class="d-flex justify-content-between">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger btn-lg" />
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Voltar para a Lista
        </a>
    </div>
</div>
