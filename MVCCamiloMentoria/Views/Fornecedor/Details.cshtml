@model MVCCamiloMentoria.ViewModels.FornecedorViewModel

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Detalhes do Fornecedor</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.Nome) </dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.Nome) </dd>

                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.CNPJ) </dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.CNPJ) </dd>

                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.CPF) </dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.CPF) </dd>

                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.FinalidadeFornecedor) </dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.FinalidadeFornecedor) </dd>
            </dl>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Voltar à Lista
            </a>
        </div>
    </div>
</div>
