@model MVCCamiloMentoria.ViewModels.EquipamentoViewModel

<div class="container">
    <h4 class="mb-4">Editar Equipamento</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome do Equipamento</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do equipamento" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label class="control-label">Status Operacional</label>
                    <select asp-for="StatusOperacional" class="form-control">
                        <option value="true" selected="@Model.StatusOperacional">Operacional</option>
                        <option value="false" selected="@(!Model.StatusOperacional)">Inoperante</option>
                    </select>
                    <span asp-validation-for="StatusOperacional" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="MarcaId" class="control-label">Marca</label>
                    <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId">
                        <option value="">Selecione a Marca</option>
                    </select>
                    <span asp-validation-for="MarcaId" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ModeloId" class="control-label">Modelo</label>
                    <select asp-for="ModeloId" class="form-control" asp-items="ViewBag.ModeloId">
                        <option value="">Selecione o Modelo</option>
                    </select>
                    <span asp-validation-for="ModeloId" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="EscolaId" class="control-label">Escola</label>
                    <select asp-for="EscolaId" class="form-control" asp-items="ViewBag.EscolaId">
                        <option value="">Selecione a Escola</option>
                    </select>
                    <span asp-validation-for="EscolaId" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Salvar Alterações" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
