@model IEnumerable<MVCCamiloMentoria.ViewModels.AuthUserViewModel>

@{
    ViewData["Title"] = "Login - School Manager";
}

<div class="login-hero">
    <div class="login-grid">
        <div class="login-text">
            <h1 class="login-title">Bem-vindo ao <span>School Manager</span></h1>
            <p class="login-subtitle">
                Acesse sua plataforma de gestão escolar para controlar alunos, professores, disciplinas e muito mais.
            </p>

            @if (TempData["Error"] != null)
            {
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form method="post" class="login-form">
                <div class="input-group">
                    <label for="username">Usuário</label>
                    <input type="text" id="username" name="username" required placeholder="Digite seu usuário">
                </div>
                <div class="input-group">
                    <label for="password">Senha</label>
                    <input type="password" id="password" name="password" required placeholder="Digite sua senha">
                </div>
                <button type="submit" class="btn-login">Entrar</button>
            </form>

            <div class="additional-info">
                <p><i class="fas fa-lock"></i> Dados protegidos com autenticação e criptografia.</p>
                <p><i class="fas fa-mobile-alt"></i> Compatível com tablets e smartphones.</p>
            </div>
        </div>

        <div class="login-illustration">
            <img src="/images/school-illustration.png" alt="Ilustração do sistema School Manager">
        </div>
    </div>
</div>


<style>
    html, body {
        margin: 0;
        padding: 0;
        background: linear-gradient(120deg, #eef5fd, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-hero {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
        padding: 2rem;
        animation: fadeInUp 1s ease-in-out;
    }

    .login-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        max-width: 1200px;
        width: 100%;
        align-items: center;
    }

    .login-text {
        text-align: left;
    }

    .login-title {
        font-size: 3rem;
        font-weight: 800;
        color: #0d47a1;
        margin-bottom: 1rem;
    }

        .login-title span {
            color: #1976d2;
        }

    .login-subtitle {
        font-size: 1.25rem;
        color: #333;
        margin-bottom: 2rem;
        line-height: 1.7;
    }

    .input-group {
        margin-bottom: 1.5rem;
        text-align: left;
    }

        .input-group label {
            font-size: 0.9rem;
            color: #2d3748;
        }

        .input-group input {
            width: 100%;
            padding: 0.8rem;
            margin-top: 0.5rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 8px;
            color: #2d3748;
            background: #f9fafb;
            transition: border 0.3s ease;
        }

            .input-group input:focus {
                border: 1px solid #1976d2;
                outline: none;
            }

    .btn-login {
        width: 100%;
        padding: 1rem;
        background: #0d47a1;
        color: white;
        font-size: 1.1rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-login:hover {
            background: #1976d2;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(25, 118, 210, 0.2);
        }

    .additional-info {
        font-size: 0.95rem;
        color: #666;
        margin-top: 1rem;
    }

        .additional-info i {
            color: #1976d2;
            margin-right: 0.5rem;
        }

    .login-illustration img {
        width: 100%;
        aspect-ratio: 17 / 17;
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        animation: fadeInUp 0.8s ease-in-out;
    }

    @@keyframes fadeInUp {
        0%

    {
        opacity: 0;
        transform: translateY(40px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 991px) {
        .login-grid

    {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .login-text {
        text-align: center;
    }

    .login-title {
        font-size: 2.5rem;
    }

    .login-subtitle {
        font-size: 1.1rem;
    }

    }
</style>
