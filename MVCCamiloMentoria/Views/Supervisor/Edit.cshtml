@model MVCCamiloMentoria.ViewModels.SupervisorViewModel

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

@{
	ViewData["Title"] = "Editar Supervisor";
}

<div class="container">
	<div class="justify-content-center">
		<br />
		<h3 class="mb-4">Editar Supervisor</h3>
	</div>

	<hr />

	<div class="row">
		<div class="col-md-8 offset-md-2">
			<form asp-action="Edit" enctype="multipart/form-data">
				<input type="hidden" asp-for="Id" />

				<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Informações Pessoais</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="Nome" class="form-label"></label>
							<input asp-for="Nome" class="form-control" />
							<span asp-validation-for="Nome" class="text-danger"></span>
						</div>

						<div class="row">
							<div class="col-md-8">
								<div class="form-group mb-3">
									<label class="fw-bold">Foto</label>
									<input asp-for="FotoUpload" type="file" class="form-control" accept="image/png, image/jpeg" onchange="previewImage(this)" />
									<small class="text-muted">Somente JPG/PNG. Máximo 2MB.</small>
									<div class="mt-2">
										<img id="preview" src="@(Model.FotoUrl ?? "/img/placeholder.png")" class="img-thumbnail" style="max-height: 200px;" />
									</div>
								</div>
							</div>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Matricula" class="form-label"></label>
							<input asp-for="Matricula" class="form-control" />
							<span asp-validation-for="Matricula" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Telefones</div>
					<div class="card-body">
						@for (int i = 0; i < Model.Telefones!.Count; i++)
						{
							<div class="row mb-2">
								<input type ="hidden" name="Telefones[@i].EscolaId" value="@Model.Telefones[i].EscolaId" />
								<div class="col-md-6">
									<label asp-for="Telefones[@i].DDD">DDD</label>
									<input asp-for="Telefones[@i].DDD" class="form-control" />
									<span asp-validation-for="Telefones[@i].DDD" class="text-danger"></span>
								</div>
								<div class="col-md-6">
									<label asp-for="Telefones[@i].Numero">Número</label>
									<input asp-for="Telefones[@i].Numero" class="form-control" />
									<span asp-validation-for="Telefones[@i].Numero" class="text-danger"></span>
								</div>
							</div>
						}
					</div>
				</div>

				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Escolas</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="EscolaIds">Selecionar Escolas</label>
							<select asp-for="EscolaIds" asp-items="(List<SelectListItem>)ViewBag.Escolas" class="form-control select2" multiple="multiple">
							</select>
							<span asp-validation-for="EscolaIds" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="card mb-4">
					<div class="card-header bg-primary text-white">
						<h5 class="mt-4">Endereço</h5>
						</div>
						<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="Endereco.NomeRua" class="form-label">Rua</label>
							<input asp-for="Endereco.NomeRua" class="form-control" id="Endereco_NomeRua" />
							<span asp-validation-for="Endereco.NomeRua" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Endereco.NumeroRua" class="form-label">Número</label>
							<input asp-for="Endereco.NumeroRua" class="form-control" id="Endereco_NumeroRua" />
							<span asp-validation-for="Endereco.NumeroRua" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Endereco.Complemento" class="form-label">Complemento</label>
							<input asp-for="Endereco.Complemento" class="form-control" id="Endereco_Complemento" />
							<span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Endereco.CEPMascara" class="form-label">CEP</label>
							<input asp-for="Endereco.CEPMascara" class="form-control" id="Endereco_CEP" />
							<span asp-validation-for="Endereco.CEPMascara" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Endereco.EstadoId" class="form-label">Estado</label>
							<select asp-for="Endereco.EstadoId" class="form-control" id="Estado">
								<option value="">Selecione um Estado</option>
								@if (Model?.Endereco?.Estado != null)
								{
									@foreach (var estado in Model.Endereco.Estado)
									{
										<option value="@estado.id">@estado.Nome</option>
									}
								}
							</select>
							<span asp-validation-for="Endereco.EstadoId" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="text-end">
					<input type="submit" value="Salvar" class="btn btn-success px-4" />
					<a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
				</div>

			</form>
		</div>
	</div>
</div>

<script>
	function previewImage(input) {
		const file = input.files[0];
		if (file) {
			const maxSize = 2 * 1024 * 1024; // 2MB
			const allowedTypes = ['image/jpeg', 'image/png'];

			if (!allowedTypes.includes(file.type)) {
				alert("Apenas arquivos JPG ou PNG são permitidos.");
				input.value = "";
				return;
			}

			if (file.size > maxSize) {
				alert("O tamanho máximo do arquivo é 2MB.");
				input.value = "";
				return;
			}

			const reader = new FileReader();
			reader.onload = function (e) {
				document.getElementById('preview').src = e.target.result;
			};
			reader.readAsDataURL(file);
		}
	}
</script>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
	$(document).ready(function() {
		$('#Endereco_CEP').blur(function() {
			const cep = $(this).val().replace(/\D/g, '');
			if (cep.length !== 8) return;


			$.getJSON(`/api/cep/${cep}`, function(data) {
				// console.log("Dados da API:", data);


				if (data.logradouro) {
					$("#Endereco_NomeRua").val(data.logradouro).trigger('change');
				}

				// if (data.localidade) {
				//     $("#Endereco_Cidade").val(data.localidade).trigger('change');
				// }

				const estadoSelect = $("#Estado");
				if (data.uf || data.estado) {
					const estadoParaBuscar = data.estado || data.uf;
					const estadoEncontrado = estadoSelect.find("option").filter(function() {
						return $(this).text().trim() === estadoParaBuscar;
					}).val();

					if (estadoEncontrado) {
						estadoSelect.val(estadoEncontrado).trigger('change');
					} else {
						console.warn("Estado não encontrado:", estadoParaBuscar);
					}
				}
			}).fail(function() {
				alert('CEP não encontrado ou erro na consulta!');

				$("#Endereco_NomeRua, #Endereco_Cidade").val('');
				$("#Estado").val('');
			});
		});
	});
</script>

<script>
	$(document).ready(function () {
		$('.select2').select2({
			placeholder: "Selecione as escolas",
			width: '100%',
			language: "pt-BR"
		});
	});
</script>