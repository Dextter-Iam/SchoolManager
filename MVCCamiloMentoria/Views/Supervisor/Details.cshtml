@model MVCCamiloMentoria.ViewModels.SupervisorViewModel

@{
    ViewData["Title"] = "Detalhes do Supervisor";
}

<div class="container">
    <div class="justify-content-center">
        <br />
        <h3 class="mb-4">Detalhes do Supervisor</h3>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Informações Pessoais</h5>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <div class="mt-2 text-center">
                                    @if (!string.IsNullOrEmpty(Model.FotoUrl))
                                    {
                                        <img id="preview"
                                             src="@Model.FotoUrl"
                                             class="img-thumbnail rounded-square"
                                             style="max-height: 230px; object-fit: cover;"
                                             alt="Foto do Supervisor" />
                                    }
                                    else
                                    {
                                        <img src="~/images/sem-foto.png"
                                             class="img-fluid rounded mb-3 shadow-sm"
                                             style="max-height: 110px; object-fit: cover;"
                                             alt="Sem Foto" />
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Nome</dt>
                                <dd class="col-sm-8">@Model.Nome</dd>

                                <dt class="col-sm-4 fw-bold">Matrícula</dt>
                                <dd class="col-sm-8">@Model.Matricula</dd>

                                <dt class="col-sm-4 fw-bold">Telefone</dt>
                                <dd class="col-sm-8">
                                    @foreach (var tel in Model.Telefones!)
                                    {
                                        <p>(@tel.DDD) @tel.Numero</p>
                                    }
                                </dd>

                                <dt class="col-sm-4 fw-bold">Endereço</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Endereco != null)
                                    {
                                        @($"{Model.Endereco.NomeRua}, {Model.Endereco.NumeroRua}")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Escolas Vinculadas</h5>
                </div>
                <div class="card-body">
                    @if (Model.SupervisorEscola != null && Model.SupervisorEscola.Any())
                    {
                        <ul class="list-group">
                            @foreach (var escola in Model.SupervisorEscola)
                            {
                                if (escola != null)
                                {
                                    <li class="list-group-item">@escola.Escola.Nome</li>
                                }
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Nenhuma escola vinculada</p>
                    }
                </div>
            </div>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 me-2">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
