@model MVCCamiloMentoria.ViewModels.SupervisorViewModel

@{
    ViewData["Title"] = "Cadastrar Supervisor";
}

<div class="container">
    <div class="justify-content-center">
        <br />
        <h3 class="mb-4">Cadastro de Supervisor</h3>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Informações Pessoais -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">Informações Pessoais</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Nome"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Matricula"></label>
                            <input asp-for="Matricula" class="form-control" />
                            <span asp-validation-for="Matricula" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Escolas -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">Escolas</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label>Selecionar Escolas</label>
                            <div class="form-check">
                                @for (int i = 0; i < ((List<SelectListItem>)ViewBag.Escolas).Count; i++)
                                {
                                    var escola = ((List<SelectListItem>)ViewBag.Escolas)[i];
                                    int escolaId = int.Parse(escola.Value);
                                    bool isChecked = Model.Escolas != null && Model.Escolas.Any(e => e.EscolaId == escolaId);

                                    <div class="form-check mb-2">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="EscolaIds"
                                               id="escola_@i"
                                               value="@escolaId"
                                        @(isChecked ? "checked" : "") />

                                        <label class="form-check-label" for="escola_@i">
                                            @escola.Text
                                        </label>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="Escolas" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Telefone -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">Telefones</div>
                    <div class="card-body">
                        @for (int i = 0; i < Model.Telefones!.Count; i++)
                        {
                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <label asp-for="Telefones[i].DDD"></label>
                                    <input asp-for="Telefones[i].Numero" class="form-control" />
                                    <span asp-validation-for="Telefones[i].Numero" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Telefones[i].Numero"></label>
                                    <input asp-for="Telefones[i].Numero" class="form-control" />
                                    <span asp-validation-for="Telefones[i].Numero" class="text-danger"></span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            
                <!-- Endereço -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">Endereço</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Endereco.NomeRua"></label>
                            <input asp-for="Endereco.NomeRua" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Endereco.NumeroRua"></label>
                            <input asp-for="Endereco.NumeroRua" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Endereco.Complemento"></label>
                            <input asp-for="Endereco.Complemento" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Endereco.CEP"></label>
                            <input asp-for="Endereco.CEP" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Endereco.EstadoId"></label>
                            <select asp-for="Endereco.EstadoId" class="form-select" asp-items="ViewBag.Estados"></select>
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <input type="submit" value="Cadastrar" class="btn btn-primary px-4" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
