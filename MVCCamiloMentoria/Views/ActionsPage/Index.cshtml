<style>
	body {
		background: linear-gradient(to right, #eef2f7, #ffffff);
		font-family: 'Segoe UI', sans-serif;
		margin: 0;
		padding: 0;
	}

	.admin-panel {
		padding: 4rem 1rem;
		min-height: 100vh;
		display: flex;
		justify-content: center;
	}

	.container {
		max-width: 1200px;
		width: 100%;
	}

	.section-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: #1b6ec2;
		margin-bottom: 2rem;
		text-align: left;
	}

	.grid-cards {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
		gap: 2.5rem;
	}

	.action-card {
		position: relative;
		background-color: #f1f5f8;
		border-radius: 1rem;
		padding: 2rem 1.5rem;
		text-align: center;
		text-decoration: none;
		color: #1b6ec2;
		transition: all 0.3s ease;
		box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
		min-height: 140px;
		margin-bottom: 5rem; /* Adiciona espaçamento entre cards */
	}

	.actions-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 3rem; /* Aqui também é essencial */
	}


	.action-card:hover {
		background-color: #f0f8ff;
		transform: translateY(-6px);
		box-shadow: 0 12px 35px rgba(27, 110, 194, 0.12);
	}

	.action-card .icon {
		font-size: 2.5rem;
		position: relative;
	}

	.action-card .label {
		margin-top: 0.75rem;
		font-size: 1.2rem;
		font-weight: 600;
	}

	.badge {
		background-color: #dc3545;
		color: white;
		font-size: 0.75rem;
		padding: 0.25rem 0.5rem;
		border-radius: 999px;
		position: absolute;
		top: -10px;
		right: -10px;
	}

	/* Dropdown card */
	.dropdown-card {
		position: relative;
		margin-bottom: 5.5rem; /* Garante espaço para o dropdown não ser cortado */
		z-index: 10; /* Coloca o card acima de outros */
		overflow: visible; /* Permite que o conteúdo transborde */
	}

		.dropdown-card .dropdown-content {
			display: none;
			position: absolute;
			top: 100%;
			left: 50%;
			transform: translateX(-50%);
			background: #fff;
			padding: 0.5rem;
			border-radius: 0.75rem;
			box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
			z-index: 100; /* Garante que o dropdown fique acima de tudo */
			width: 220px;
			white-space: nowrap;
		}

		.dropdown-card:hover .dropdown-content {
			display: block;
		}

	/* Links internos do dropdown */
	.dropdown-content a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1rem;
		font-size: 0.95rem;
		color: #1b6ec2;
		text-decoration: none;
		border-radius: 0.5rem;
		transition: background 0.2s ease;
	}

		.dropdown-content a:hover {
			background-color: #f1f5f9;
		}


	@@media (max-width: 768px) {
		.section-title {
			text-align: center;
		}

		.grid-cards {
			grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
		}
	}
</style>
