@{
    ViewData["Title"] = "Painel - School Manager";
}
<div class="admin-panel">
    <div class="container">
        <h2 class="section-title">Painel Administrativo</h2>
        <div class="grid-cards">

            <!-- Card simples com tooltip e badge -->
            <a href="/Aluno" class="action-card" title="Ver todos os alunos">
                <div class="icon">
                    <i class="fas fa-user-graduate"></i>
                    <span class="badge">148</span>
                </div>
                <div class="label">Alunos</div>
            </a>

            <a href="/Disciplina" class="action-card" title="Gerenciar disciplinas">
                <div class="icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="label">Disciplinas</div>
            </a>

            <a href="/Fornecedor" class="action-card" title="Lista de fornecedores">
                <div class="icon">
                    <i class="fas fa-truck"></i>
                </div>
                <div class="label">Fornecedores</div>
            </a>

            <a href="/Escola" class="action-card" title="Configurações das escolas">
                <div class="icon">
                    <i class="fas fa-school"></i>
                </div>
                <div class="label">Escolas</div>
            </a>

            <!-- Card com dropdown -->
            <div class="action-card dropdown-card" title="Mais opções administrativas">
                <div class="icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <div class="label">Gestão</div>
                <div class="dropdown-content">
                    <a href="/Funcionarios"><i class="fas fa-users-cog"></i> Funcionários</a>
                    <a href="/Financeiro"><i class="fas fa-file-invoice-dollar"></i> Financeiro</a>
                    <a href="/Relatorios"><i class="fas fa-chart-line"></i> Relatórios</a>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #eef2f7, #ffffff);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .admin-panel {
        padding: 4rem 1rem;
        min-height: 100vh;
        display: flex;
        justify-content: center;
    }

    .container {
        max-width: 1200px;
        width: 100%;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1b6ec2;
        margin-bottom: 2rem;
        text-align: left;
    }

    .grid-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 1.5rem;
    }

    .action-card {
        position: relative;
        background: #fff;
        border-radius: 1rem;
        padding: 2rem 1rem;
        text-align: center;
        color: #1b6ec2;
        text-decoration: none;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }

        .action-card:hover {
            background-color: #f0f8ff;
            transform: translateY(-6px);
            box-shadow: 0 12px 35px rgba(27, 110, 194, 0.12);
        }

        .action-card .icon {
            font-size: 2.5rem;
            position: relative;
        }

        .action-card .label {
            margin-top: 0.75rem;
            font-size: 1.2rem;
            font-weight: 600;
        }

    .badge {
        background-color: #dc3545;
        color: white;
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 999px;
        position: absolute;
        top: -10px;
        right: -10px;
    }

    /* Dropdown card */
    .dropdown-card {
        position: relative;
    }

        .dropdown-card .dropdown-content {
            display: none;
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            background: #fff;
            padding: 0.5rem;
            border-radius: 0.75rem;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            z-index: 100;
            width: 200px;
        }

        .dropdown-card:hover .dropdown-content {
            display: block;
        }

    .dropdown-content a {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        color: #1b6ec2;
        text-decoration: none;
        border-radius: 0.5rem;
        transition: background 0.2s;
    }

        .dropdown-content a:hover {
            background-color: #f1f5f9;
        }

    @@media (max-width: 768px) {
        .section-title

    {
        text-align: center;
    }

    .grid-cards {
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    }

    }
</style>
