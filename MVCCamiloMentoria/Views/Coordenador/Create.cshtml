@model MVCCamiloMentoria.ViewModels.CoordenadorViewModel

@{
    ViewData["Title"] = "Cadastrar Coordenador";
}

<div class="container">
    <div class="justify-content-center">
        <br />
        <h3 class="mb-4">Cadastro de Coordenador</h3>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Informações Pessoais -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">Informações Pessoais</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Nome"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Matricula"></label>
                            <input asp-for="Matricula" class="form-control" />
                            <span asp-validation-for="Matricula" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Telefone -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">Telefone</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label asp-for="DDD"></label>
                                <input asp-for="DDD" class="form-control" />
                            </div>
                            <div class="col-md-8">
                                <label asp-for="Numero"></label>
                                <input asp-for="Numero" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Escola -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">Escola</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="EscolaId"></label>
                            <select asp-for="EscolaId" class="form-select" asp-items="ViewBag.Escolas"></select>
                            <span asp-validation-for="EscolaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Endereço -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">Endereço</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="NomeRua"></label>
                            <input asp-for="NomeRua" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NumeroRua"></label>
                            <input asp-for="NumeroRua" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Complemento"></label>
                            <input asp-for="Complemento" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CEP"></label>
                            <input asp-for="CEP" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EstadoId"></label>
                            <select asp-for="EstadoId" class="form-select" asp-items="ViewBag.Estados"></select>
                        </div>
                    </div>
                </div>


                <div class="text-end">
                    <input type="submit" value="Cadastrar" class="btn btn-primary px-4" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
