@model MVCCamiloMentoria.ViewModels.EscolaViewModel

<div class="container">
    <hr />

    <fieldset class="border rounded p-3 mb-4">
        <legend class="w-auto px-2">Informações da Escola</legend>

        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Endereco.NomeRua)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Endereco.NumeroRua)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Endereco.NumeroRua)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Endereco.Complemento)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Endereco.Complemento)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Endereco.CEP)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Endereco.CEP)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Estado.Sigla)
            </dd>
        </dl>
    </fieldset>

    <!-- Card para Professores -->
    <div class="card mt-5 shadow-sm">
        <div class="card-header bg-secondary text-white">
            Professores
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-dark">
                        <tr>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @if (Model.Professores != null && Model.Professores.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var professor in Model.Professores)
                                        {
                                            <li>@professor.Nome</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Nenhum professor cadastrado</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Card para Supervisores -->
    <div class="card mt-5 shadow-sm">
        <div class="card-header bg-primary text-white">
            Supervisores
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-dark">
                        <tr>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @if (Model.Supervisores != null && Model.Supervisores.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var supervisor in Model.Supervisores)
                                        {
                                            <li>@supervisor.Nome</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Nenhum supervisor cadastrado</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Card para Coordenadores -->
    <div class="card mt-5 shadow-sm">
        <div class="card-header bg-success text-white">
            Coordenadores
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-dark">
                        <tr>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @if (Model.Coordenadores != null && Model.Coordenadores.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var coordenador in Model.Coordenadores)
                                        {
                                            <li>@coordenador.Nome</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Nenhum coordenador cadastrado</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Card para Diretores -->
    <div class="card mt-5 shadow-sm">
        <div class="card-header bg-warning text-white">
            Diretores
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-dark">
                        <tr>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @if (Model.Diretores != null && Model.Diretores.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var diretor in Model.Diretores)
                                        {
                                            <li>@diretor.Nome</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Nenhum diretor cadastrado</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            Voltar à Lista
        </a>
    </div>
</div>
