@{
    ViewData["Title"] = "Início";
}

<div class="home-hero">
    <div class="hero-grid">
        <div class="hero-text">
            <h1 class="hero-title">Bem-vindo ao <span>School Manager</span>!</h1>
            <p class="hero-subtitle">
                Uma plataforma <span class="highlight">tudo-em-um</span> para transformar a gestão escolar. Controle completo de <strong>alunos</strong>, <strong>disciplinas</strong>, <strong>fornecedores</strong> e <strong>unidades escolares</strong> — com tecnologia moderna, acessível e eficiente.
            </p>

            <ul class="hero-features">
                <li><i class="fas fa-user-graduate"></i> Matrículas e histórico de alunos</li>
                <li><i class="fas fa-chalkboard-teacher"></i> Gestão de professores e turmas</li>
                <li><i class="fas fa-book"></i> Controle curricular e avaliações</li>
                <li><i class="fas fa-truck-loading"></i> Administração de fornecedores e estoques</li>
                <li><i class="fas fa-school"></i> Gestão multi-escolas com relatórios inteligentes</li>
            </ul>

            <a href="@Url.Action("Login", "AuthUser")" class="btn-start">Começar Agora</a>

            <div class="additional-info">
                <p><i class="fas fa-lock"></i> Dados protegidos com autenticação e criptografia.</p>
                <p><i class="fas fa-mobile-alt"></i> Compatível com tablets e smartphones.</p>
            </div>
        </div>

        <div class="hero-illustration">
            <img src="/images/school-illustration.png" alt="Ilustração do sistema School Manager">
        </div>
    </div>
</div>

<style>
    html, body {
        margin: 0;
        padding: 0;
        background: linear-gradient(120deg, #eef5fd, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .home-hero {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
        padding: 2rem;
        animation: fadeInUp 1s ease-in-out;
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        max-width: 1200px;
        width: 100%;
        align-items: center;
    }

    .hero-text {
        text-align: left;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 800;
        color: #0d47a1;
        margin-bottom: 1rem;
    }

        .hero-title span {
            color: #1976d2;
        }

    .hero-subtitle {
        font-size: 1.25rem;
        color: #333;
        margin-bottom: 2rem;
        line-height: 1.7;
    }

    .highlight {
        color: #1976d2;
        font-weight: 700;
    }

    .hero-features {
        list-style: none;
        padding: 0;
        margin-bottom: 2rem;
    }

        .hero-features li {
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
            color: #444;
        }

        .hero-features i {
            color: #1976d2;
            font-size: 1.3rem;
        }

    .btn-start {
        background: #0d47a1;
        color: white;
        padding: 0.9rem 2.2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        margin-bottom: 1.5rem;
        box-shadow: 0 5px 15px rgba(25, 118, 210, 0.2);
    }

        .btn-start:hover {
            background-color: #1976d2;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(25, 118, 210, 0.2);
            color: white;

        }

    .additional-info {
        font-size: 0.95rem;
        color: #666;
        margin-top: 1rem;
    }

        .additional-info i {
            color: #1976d2;
            margin-right: 0.5rem;
        }

    .hero-illustration img {
        width: 100%;
        aspect-ratio: 17 / 17; 
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        animation: fadeInUp 0.8s ease-in-out;
    }


    @@keyframes fadeInUp {
        0%

    {
        opacity: 0;
        transform: translateY(40px);
    }

    100% 
    {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 991px) {
        .hero-grid

    {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .hero-text {
        text-align: center;
    }

    .hero-title {
        font-size: 2.5rem;
    }

    .hero-subtitle {
        font-size: 1.1rem;
    }

    }
</style>
