@model MVCCamiloMentoria.ViewModels.AlunoViewModel

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Detalhes do aluno</h4>
                </div>

                <div class="card-body">


                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Informações Pessoais</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-4 text-center">
                                @if (Model.Foto != null && Model.Foto.Length > 0)
                                {
                                    <img src="@Url.Action("GetFoto", "Aluno", new { id = Model.Id })" class="img-fluid rounded mb-3 shadow-sm" alt="Foto do Aluno" style="max-height: 250px;" />
                                }
                                else
                                {
                                    <img src="~/images/sem-foto.png" class="img-fluid rounded mb-3 shadow-sm" alt="Sem Foto" style="max-height: 250px;" />
                                }
                            </div>
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
                                    <dd class="col-sm-8">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>

                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.EmailEscolar)</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailEscolar)</dd>

                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.AnoInscricao)</dt>
                                    <dd class="col-sm-8">@Model.AnoInscricao.ToString("yyyy")</dd>

                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.BolsaEscolar)</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.BolsaEscolar)
                                        {
                                            <span class="badge bg-success">Bolsista</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Não Bolsista</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <!-- Seção Contato -->
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Contato</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3 fw-bold">Telefone</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Telefones != null && Model.Telefones.Any())
                                    {
                                        foreach (var alunoTelefone in Model.Telefones)
                                        {
                                            if (alunoTelefone.Telefones != null)
                                            {
                                                <p>(@alunoTelefone.Telefones.DDD) @alunoTelefone.Telefones.Numero.ToString("00000-0000")</p>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Telefone não cadastrado</span>
                                    }
                                </dd>
                            </dl>
                        </div>

                    <!-- Seção Responsáveis -->
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Responsáveis</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3 fw-bold">Responsável 1</dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.NomeResponsavel1))
                                    {
                                        <p>@Model.NomeResponsavel1 <span class="text-muted">(@Model.Parentesco1)</span></p>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </dd>

                                <dt class="col-sm-3 fw-bold">Responsável 2</dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.NomeResponsavel2))
                                    {
                                        <p>@Model.NomeResponsavel2 <span class="text-muted">(@Model.Parentesco2)</span></p>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                        <!-- Seção Endereço -->
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Endereço</h5>
                            </div>
                            <div class="card-body">
                                @if (Model.Endereco != null)
                                {
                                    <address>
                                        @Model.Endereco.NomeRua, @Model.Endereco.NumeroRua<br />
                                        @if (!string.IsNullOrEmpty(Model.Endereco.Complemento))
                                        {
                                            @Model.Endereco.Complemento

                                            <br />
                                        }
                                        CEP: @Model.Endereco.CEP?.ToString("00000-000")<br />
                                        @{
                                            var estado = Model.Endereco.Estado?
                                            .FirstOrDefault(e => e.id == Model.Endereco.EstadoId);
                                        }
                                        @if (estado != null)
                                        {
                                            @($"{estado.Nome} - {estado.Sigla}")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Estado não encontrado</span>
                                        }
                                    </address>
                                }
                                else
                                {
                                    <span class="text-muted">Endereço não cadastrado</span>
                                }
                            </div>
                        </div>

                    <!-- Seção Informações Escolares -->
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Informações Escolares</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Turmas)</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Turmas != null && Model.Turmas.Any())
                                    {
                                        foreach (var turma in Model.Turmas)
                                        {
                                            <p>@turma.NomeTurma</p>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Turma não informada</span>
                                    }
                                </dd>

                                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Escolas)</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Escolas != null && Model.Escolas.Any())
                                    {
                                        foreach (var escola in Model.Escolas)
                                        {
                                            <p>@escola.Nome</p>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Escola não informada</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Botões -->
                    <div class="text-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="fas fa-list"></i> Voltar à Lista
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
