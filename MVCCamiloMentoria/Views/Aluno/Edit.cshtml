@model MVCCamiloMentoria.ViewModels.AlunoViewModel

<div class="container">
    <h3 class="mb-4">Editar Aluno</h3>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Editar Detalhes do Aluno</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

          
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label">Data de Nascimento</label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

              
                <div class="form-group">
                    <label asp-for="EmailEscolar" class="control-label">Email Escolar</label>
                    <input asp-for="EmailEscolar" class="form-control" />
                    <span asp-validation-for="EmailEscolar" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="AnoInscricao" class="control-label">Ano de Inscrição</label>
                    <input asp-for="AnoInscricao" class="form-control" />
                    <span asp-validation-for="AnoInscricao" class="text-danger"></span>
                </div>

                
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="BolsaEscolar" /> @Html.DisplayNameFor(model => model.BolsaEscolar)
                    </label>
                </div>

             
                <div class="form-group">
                    <label asp-for="TurmaId" class="control-label">Turma</label>
                    <select asp-for="TurmaId" class="form-control" asp-items="ViewBag.TurmaId"></select>
                    <span asp-validation-for="TurmaId" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <h5 class="mt-4">Responsáveis</h5>
                    <ul class="list-group">
                        @if (Model.AlunoResponsavel != null && Model.AlunoResponsavel.Any())
                        {
                            foreach (var responsavel in Model.AlunoResponsavel)
                            {
                                <li class="list-group-item">@responsavel.Responsavel</li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item">Nenhum responsável cadastrado.</li>
                        }
                    </ul>
                </div>

                <h5 class="mt-4">Telefone</h5>
                <div class="form-group">
                    <label asp-for="DDD" class="control-label">DDD</label>
                    <input asp-for="DDD" class="form-control" />
                    <span asp-validation-for="DDD" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Numero" class="control-label">Número</label>
                    <input asp-for="Numero" class="form-control" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>

                <h5 class="mt-4">Endereço</h5>

                <div class="form-group">
                    <label asp-for="NomeRua" class="control-label">Rua</label>
                    <input asp-for="NomeRua" class="form-control" />
                    <span asp-validation-for="NomeRua" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumeroRua" class="control-label">Número</label>
                    <input asp-for="NumeroRua" class="form-control" />
                    <span asp-validation-for="NumeroRua" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Complemento" class="control-label">Complemento</label>
                    <input asp-for="Complemento" class="form-control" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CEP" class="control-label">CEP</label>
                    <input asp-for="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>

          
                <div class="form-group">
                    <label asp-for="EstadoId" class="control-label">Estado</label>
                    <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.Estados"></select>
                    <span asp-validation-for="EstadoId" class="text-danger"></span>
                </div>

         
                <div class="form-group">
                    <label asp-for="EscolaId" class="control-label">Escola</label>
                    <select asp-for="EscolaId" class="form-control" asp-items="ViewBag.EscolaId"></select>
                    <span asp-validation-for="EscolaId" class="text-danger"></span>
                </div>

               
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
