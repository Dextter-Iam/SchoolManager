@model MVCCamiloMentoria.ViewModels.AlunoViewModel

<div class="container">
    <div class="justify-content-center">
        <br />
        <h3 class="mb-4">Editar Aluno</h3>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Seção Informações Pessoais -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Informações Pessoais</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Nome" class="form-label"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>

                                <div class ="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group mb-3">
                                    <label>Foto</label>
                                    <input asp-for="FotoUpload" type="file" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="DataNascimento" class="form-label"></label>
                                    <input asp-for="DataNascimento" type = "date" class="form-control" />
                                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="EmailEscolar" class="form-label"></label>
                            <input asp-for="EmailEscolar" class="form-control" />
                            <span asp-validation-for="EmailEscolar" class="text-danger"></span>
                        </div>

                            <!-- Seção Responsáveis -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Responsáveis</h5>
                                </div>
                                <div class="card-body">
                                    <!-- Responsável 1 -->
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="NomeResponsavel1" class="form-label"></label>
                                                <input asp-for="NomeResponsavel1" class="form-control" />
                                                <span asp-validation-for="NomeResponsavel1" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Parentesco1" class="form-label"></label>
                                                <select asp-for="Parentesco1" asp-items="Model.ParentescoOptions" class="form-control">
                                                    <option value="">-- Selecione --</option>
                                                </select>
                                                <span asp-validation-for="Parentesco1" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Responsável 2 -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="NomeResponsavel2" class="form-label"></label>
                                                <input asp-for="NomeResponsavel2" class="form-control" />
                                                <span asp-validation-for="NomeResponsavel2" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Parentesco2" class="form-label"></label>
                                                <select asp-for="Parentesco2" asp-items="Model.ParentescoOptions" class="form-control">
                                                    <option value="">-- Selecione --</option>
                                                </select>
                                                <span asp-validation-for="Parentesco2" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="AnoInscricao" class="form-label"></label>
                                    <input asp-for="AnoInscricao" class="form-control" />
                                    <span asp-validation-for="AnoInscricao" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <div class="form-check mt-3">
                                    <input class="form-check-input" asp-for="BolsaEscolar" />
                                    <label class="form-check-label" asp-for="BolsaEscolar"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TurmaId" class="form-label"></label>
                                    <select asp-for="TurmaId" class="form-select" asp-items="ViewBag.TurmaId"></select>
                                    <span asp-validation-for="TurmaId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EscolaId" class="form-label"></label>
                                    <select asp-for="EscolaId" class="form-select" asp-items="ViewBag.EscolaId"></select>
                                    <span asp-validation-for="EscolaId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Seção Telefone -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Telefone</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="DDD" class="form-label"></label>
                                    <input asp-for="DDD" class="form-control" />
                                    <span asp-validation-for="DDD" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Numero" class="form-label"></label>
                                    <input asp-for="Numero" class="form-control" />
                                    <span asp-validation-for="Numero" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Seção Endereço -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Endereço</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="NomeRua" class="form-label"></label>
                            <input asp-for="NomeRua" class="form-control" />
                            <span asp-validation-for="NomeRua" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="NumeroRua" class="form-label"></label>
                                    <input asp-for="NumeroRua" class="form-control" />
                                    <span asp-validation-for="NumeroRua" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Complemento" class="form-label"></label>
                                    <input asp-for="Complemento" class="form-control" />
                                    <span asp-validation-for="Complemento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CEP" class="form-label"></label>
                            <input asp-for="CEP" class="form-control" />
                            <span asp-validation-for="CEP" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="EstadoId" class="form-label"></label>
                            <select asp-for="EstadoId" class="form-select" asp-items="ViewBag.Estados"></select>
                            <span asp-validation-for="EstadoId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Botões de Ação -->
                <div class="form-group text-end">
                    <input type="submit" value="Salvar" class="btn btn-primary px-4" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}