@model MVCCamiloMentoria.ViewModels.ProfessorViewModel

@{
	ViewData["Title"] = "Cadastrar Professor";
}

<div class="container">
	<div class="justify-content-center">
		<br />
		<h3 class="mb-4">Cadastro de Professor</h3>
	</div>

	<hr />

	<div class="row">
		<div class="col-md-8 offset-md-2">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>


				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Informações Pessoais</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="Nome"></label>
							<input asp-for="Nome" class="form-control" />
							<span asp-validation-for="Nome" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Matricula"></label>
							<input asp-for="Matricula" class="form-control" />
							<span asp-validation-for="Matricula" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Telefone</div>
					<div class="card-body">
						<div class="row">
							<div class="col-md-4">
								<label asp-for="Telefones[0].DDD"></label>
								<input asp-for="Telefones[0].DDD" class="form-control" />
							</div>
							<div class="col-md-8">
								<label asp-for="Telefones[0].Numero"></label>
								<input asp-for="Telefones[0].Numero" class="form-control" />
							</div>
						</div>
					</div>
				</div>
				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Escola e Turmas</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="EscolaId"></label>
							<select asp-for="EscolaId" class="form-select" asp-items="ViewBag.EscolaId" id="EscolaId"></select>
							<span asp-validation-for="EscolaId" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label>Turmas</label>
							<select asp-for="TurmaIds" class="form-select" multiple id="TurmaIds" asp-items="ViewBag.TurmaIds"></select>
						</div>
					</div>
				</div>

				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Disciplinas</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label>Disciplinas</label>
							<select asp-for="DisciplinaIds" class="form-select" multiple asp-items="ViewBag.DisciplinaIds"></select>
						</div>
					</div>
				</div>

				<div class="card mb-4">
					<div class="card-header bg-primary text-white">Endereço</div>
					<div class="card-body">
						<div class="form-group mb-3">
							<label asp-for="Endereco.NomeRua"></label>
							<input asp-for="Endereco.NomeRua" class="form-control" id="Endereco_NomeRua"/>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Endereco.NumeroRua"></label>
							<input asp-for="Endereco.NumeroRua" class="form-control" id="Endereco_NumeroRua"/>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Endereco.Complemento"></label>
							<input asp-for="Endereco.Complemento" class="form-control" id="Endereco_Complemento" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="Endereco.CEPMascara"></label>
							<input asp-for="Endereco.CEPMascara" class="form-control" id="Endereco_CEP" />
						</div>
						<div class="form-group">
							<label>Estado</label>
							@Html.DropDownListFor(model => model.Endereco.EstadoId,
																(SelectList)ViewBag.Estados,
																"Selecione um estado",
																new { @class = "form-control", id = "Estado" })
						</div>
					</div>
				</div>



				<div class="text-end">
					<input type="submit" value="Cadastrar" class="btn btn-primary px-4" />
					<a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		document.getElementById('EscolaId').addEventListener('change', function () {
			var escolaId = this.value;
			var turmasSelect = document.getElementById('TurmaIds');

			fetch(`/Professor/ObterTurmasPorEscola?escolaId=${escolaId}`)
				.then(response => response.json())
				.then(data => {
					turmasSelect.innerHTML = '';

					data.forEach(turma => {
						var option = document.createElement('option');
						option.value = turma.turmaId;
						option.text = turma.nomeTurma;
						turmasSelect.appendChild(option);
					});
				})
				.catch(error => {
					console.error('Erro ao buscar turmas:', error);
				});
		});
	</script>

	@await Html.PartialAsync("_ValidationScriptsPartial")
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
	$(document).ready(function() {
		$('#Endereco_CEP').blur(function() {
			const cep = $(this).val().replace(/\D/g, '');
			if (cep.length !== 8) return;


			$.getJSON(`/api/cep/${cep}`, function(data) {
				// console.log("Dados da API:", data);


				if (data.logradouro) {
					$("#Endereco_NomeRua").val(data.logradouro).trigger('change');
				}

				// if (data.localidade) {
				//     $("#Endereco_Cidade").val(data.localidade).trigger('change');
				// }


				const estadoSelect = $("#Estado");
				if (data.uf || data.estado) {
					const estadoParaBuscar = data.estado || data.uf;
					const estadoEncontrado = estadoSelect.find("option").filter(function() {
						return $(this).text().trim() === estadoParaBuscar;
					}).val();

					if (estadoEncontrado) {
						estadoSelect.val(estadoEncontrado).trigger('change');
					} else {
						console.warn("Estado não encontrado:", estadoParaBuscar);
					}
				}
			}).fail(function() {
				alert('CEP não encontrado ou erro na consulta!');

				$("#Endereco_NomeRua, #Endereco_Cidade").val('');
				$("#Estado").val('');
			});
		});
	});
</script>