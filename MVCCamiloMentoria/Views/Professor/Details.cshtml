@model MVCCamiloMentoria.ViewModels.ProfessorViewModel

@{
    ViewData["Title"] = "Detalhes do Professor";
}

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Detalhes do Professor</h4>
                </div>

                <div class="card-body">


                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Informações Pessoais</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-4 text-center">
                                @if (Model?.Foto != null && Model?.Foto?.Length > 0)
                                {
                                    <img src="@Url.Action("GetFoto", "Professor", new { id = Model.Id })" class="img-fluid rounded mb-3 shadow-sm" alt="Foto do Professor" style="max-height: 250px;" />
                                }
                                else
                                {
                                    <img src="~/images/sem-foto.png" class="img-fluid rounded mb-3 shadow-sm" alt="Sem Foto" style="max-height: 250px;" />
                                }
                            </div>
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Matricula)</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Matricula)</dd>

                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Endereco)</dt>
                                    <dd class="col-sm-8">
                                        @Model.Endereco?.NomeRua, Nº @Model.Endereco?.NumeroRua, @Model.Endereco?.Estado?.Sigla
                                    </dd>

                                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Telefones)</dt>
                                    <dd class="col-sm-8">
                                        @foreach (var tel in Model.Telefones ?? new List<Telefone>())
                                        {
                                            <p>(@tel.DDD) @tel.Numero</p>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

    
                    <div class="mt-4">
                        <h5 class="border-bottom pb-2 mb-3">Atuação</h5>

                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Escola</th>
                                        <th>Disciplinas</th>
                                        <th>Turmas</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @if (Model.Escola != null)
                                            {
                                                @Model.Escola.Nome
                                            }
                                            else
                                            {
                                                <span class="text-muted">Nenhuma escola cadastrada</span>
                                            }
                                        </td>
                                        <td>
                                            @if (Model.Disciplinas != null && Model.Disciplinas.Any())
                                            {
                                                <ul class="list-unstyled mb-0">
                                                    @foreach (var disciplinaRel in Model.Disciplinas)
                                                    {
                                                        <li>@disciplinaRel.Disciplina?.Nome</li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Nenhuma disciplina cadastrada</span>
                                            }
                                        </td>
                                        <td>
                                            @if (Model.Turmas != null && Model.Turmas.Any())
                                            {
                                                <ul class="list-unstyled mb-0">
                                                    @foreach (var turmaRel in Model.Turmas)
                                                    {
                                                        <li>@turmaRel.Turma?.NomeTurma</li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Nenhuma turma cadastrada</span>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="text-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="fas fa-list"></i> Voltar à Lista
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
